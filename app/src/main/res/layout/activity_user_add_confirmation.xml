<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.adduser.UserAddConfirmationActivity"
    android:padding="20dp">


    <ImageView
        android:id="@+id/user_add_confirmation__avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:padding="10dp"
        tools:srcCompat="@tools:sample/avatars"
        android:background="@drawable/user_image_background"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_add_confirmation_user_label"
        android:padding="10dp"
        android:layout_below="@+id/user_add_confirmation__avatar"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_add_confirmation_user_id"
        android:padding="10dp"
        android:layout_below="@+id/user_add_confirmation_user_label"
        />


    <LinearLayout
        android:id="@+id/button_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_add_confirmation_user_id"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageButton
            android:id="@+id/user_add_confirmation_button_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_green_light"

            android:src="@drawable/baseline_check_circle_black_48" />

        <ImageButton
            android:id="@+id/user_add_confirmation_button_negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_red_light"
            android:src="@drawable/baseline_dangerous_black_48" />

    </LinearLayout>

</RelativeLayout>