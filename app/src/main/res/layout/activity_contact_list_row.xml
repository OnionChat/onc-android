<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="16dp"
    android:background="@drawable/row_background">
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contact_checked"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/contact_avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_toEndOf="@+id/contact_checked"
        android:background="@drawable/user_image_background"/>

    <ImageView
        android:id="@+id/conversation_type"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_toStartOf="@+id/contact_label"
        android:layout_alignParentBottom="true"
        android:background="@drawable/user_image_background"
        app:srcCompat="@drawable/outline_groups_white_24" />
    <TextView
        android:id="@+id/contact_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="item"
        android:textSize="18sp"
        android:maxLines="1"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:layout_toEndOf="@+id/contact_avatar"
        android:layout_toStartOf="@+id/unread_messages_count"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/contact_avatar"
        android:text="message"
        android:textSize="12sp"
        android:layout_margin="5dp"
        android:maxLines="1"
        android:layout_below="@+id/contact_label"
        android:id="@+id/last_message"/>

    <TextView
        android:id="@+id/unread_messages_count"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:text="0"
        android:textSize="12sp"
        android:layout_alignParentEnd="true"
        android:padding="10dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="3dp"/>
</RelativeLayout>

