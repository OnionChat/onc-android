<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.contactlist.ContactListWindow"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/coordinatorLayout"
        android:layout_alignParentTop="true"
        android:rotation="180"
        android:background="@android:color/transparent">

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contact_list_id_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/coordinatorLayout"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/contact_list_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:backgroundTint="#00ff00"
        app:srcCompat="@android:drawable/ic_input_add" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/contact_list_generate_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:fabSize="normal"
        android:layout_above="@+id/contact_list_fab"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        android:backgroundTint="#00ff00"
        app:srcCompat="@drawable/outline_person_add_alt_black_48"
/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/contact_list_scan_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:fabSize="normal"
        android:visibility="invisible"
        android:layout_above="@+id/contact_list_generate_fab"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/outline_person_add_black_48"
        android:backgroundTint="#0000ff"
        />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/contact_list_create_broadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:fabSize="normal"
        android:visibility="invisible"
        android:layout_above="@+id/contact_list_scan_fab"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/outline_group_add_black_36"
        android:backgroundTint="#ffffff"
        />

</RelativeLayout>