<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.contactdetails.ContactDetailsActivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:padding="20dp">

    <ImageView
        android:id="@+id/activity_contact_details_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:padding="10dp"
        tools:srcCompat="@tools:sample/avatars"
        android:background="@drawable/user_image_background"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_contact_details_user_label"
        android:padding="10dp"
        android:layout_below="@+id/activity_contact_details_avatar"
        />


    <LinearLayout
        android:id="@+id/button_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_contact_details_user_label"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageButton
            android:id="@+id/activity_contact_details_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:src="@drawable/outline_delete_black_24"
            android:backgroundTint="?attr/colorPrimary"/>

        <ImageButton
            android:id="@+id/activity_contact_details_open_webbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:src="@drawable/outline_preview_black_24"
            android:backgroundTint="?attr/colorPrimary"/>
        <ImageButton
            android:id="@+id/activity_contact_details_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:src="@drawable/outline_block_black_24"
            android:backgroundTint="?attr/colorPrimary"/>
        />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_contact_details_key_info"
        android:layout_below="@+id/button_bar"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contact_details_receivers_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_contact_details_key_info"
        android:layout_alignParentBottom="true"

        />
</RelativeLayout>